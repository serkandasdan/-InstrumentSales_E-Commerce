
@{
    ViewBag.Title = "VerifyAccount";
}

<h2>Hesabı Doğrula</h2>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{

    <div class="alert alert-success">

        <strong>Başarılı!</strong> Hesabınız başarıyla aktif edildi. Buraya tıklayınız @Html.ActionLink("Giriş Yap" , "Login" , User)


    </div>
}

else
{
        <div class="alert alert-danger">

            <strong>Hata!</strong>@ViewBag.Message


        </div>
}

